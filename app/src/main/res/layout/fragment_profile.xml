<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="70dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/profile_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mtrl_card_spacing"
        android:layout_marginTop="@dimen/mtrl_card_spacing"
        android:layout_marginRight="@dimen/mtrl_card_spacing"
        android:minHeight="200dp"
        android:theme="@style/Theme.MaterialComponents.Light">
        <ImageView
            android:layout_gravity="center"
            android:outlineSpotShadowColor="@color/colorPrimaryDark"
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:layout_marginTop="-15dp"
            android:id="@+id/profile_photo"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Profile"
            android:layout_marginTop="65dp"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            />
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/posts_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mtrl_card_spacing"
        android:layout_marginTop="@dimen/mtrl_card_spacing"
        android:layout_marginRight="@dimen/mtrl_card_spacing"
        android:minHeight="75dp"
        android:layout_below="@+id/profile_card"
        android:theme="@style/Theme.MaterialComponents.Light">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="3"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="-15dp"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Posts"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            />

    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/my_lipsticks_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mtrl_card_spacing"
        android:layout_marginTop="@dimen/mtrl_card_spacing"
        android:layout_marginRight="@dimen/mtrl_card_spacing"
        android:minHeight="40dp"
        android:layout_below="@+id/posts_card"
        android:theme="@style/Theme.MaterialComponents.Light">
        <Button
            android:id="@+id/my_lipsticks_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="left|center_vertical"
            android:background="@android:color/background_light"
            android:drawablePadding="30dp"
            android:drawableEnd="@drawable/icon_right_aero_black"
            android:minWidth="0dp"
            android:paddingLeft="15dp"
            android:scaleType="center"
            android:text="My Lipsticks"
            android:textColor="#DE000000" />
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/my_favourites_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mtrl_card_spacing"
        android:layout_marginTop="@dimen/mtrl_card_spacing"
        android:layout_marginRight="@dimen/mtrl_card_spacing"
        android:minHeight="40dp"
        android:layout_below="@+id/my_lipsticks_card"
        android:theme="@style/Theme.MaterialComponents.Light">
        <Button
            android:id="@+id/my_favourites_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="left|center_vertical"
            android:background="@android:color/background_light"
            android:drawablePadding="30dp"
            android:drawableEnd="@drawable/icon_right_aero_black"
            android:minWidth="0dp"
            android:paddingLeft="15dp"
            android:scaleType="center"
            android:text="My Favourites"
            android:textColor="#DE000000" />
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/my_wallet_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mtrl_card_spacing"
        android:layout_marginTop="@dimen/mtrl_card_spacing"
        android:layout_marginRight="@dimen/mtrl_card_spacing"
        android:minHeight="40dp"
        android:layout_below="@+id/my_favourites_card"
        android:theme="@style/Theme.MaterialComponents.Light">
        <Button
            android:id="@+id/my_wallet_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="left|center_vertical"
            android:background="@android:color/background_light"
            android:drawablePadding="30dp"
            android:drawableEnd="@drawable/icon_right_aero_black"
            android:minWidth="0dp"
            android:paddingLeft="15dp"
            android:scaleType="center"
            android:text="My Wallet"
            android:textColor="#DE000000" />
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
    android:id="@+id/invite_friends_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/mtrl_card_spacing"
    android:layout_marginTop="@dimen/mtrl_card_spacing"
    android:layout_marginRight="@dimen/mtrl_card_spacing"
    android:minHeight="40dp"
    android:layout_below="@+id/my_wallet_card"
    android:theme="@style/Theme.MaterialComponents.Light">
    <Button
        android:id="@+id/invite_friends_button"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="left|center_vertical"
        android:background="@android:color/background_light"
        android:drawablePadding="30dp"
        android:drawableEnd="@drawable/icon_right_aero_black"
        android:minWidth="0dp"
        android:paddingLeft="15dp"
        android:scaleType="center"
        android:text="Invite Friends"
        android:textColor="#DE000000" />
</com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/feedback_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mtrl_card_spacing"
        android:layout_marginTop="@dimen/mtrl_card_spacing"
        android:layout_marginRight="@dimen/mtrl_card_spacing"
        android:minHeight="40dp"
        android:layout_below="@+id/invite_friends_card"
        android:theme="@style/Theme.MaterialComponents.Light">
        <Button
            android:id="@+id/feedback_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="left|center_vertical"
            android:background="@android:color/background_light"
            android:drawablePadding="30dp"
            android:drawableEnd="@drawable/icon_right_aero_black"
            android:minWidth="0dp"
            android:paddingLeft="15dp"
            android:paddingBottom="5dp"
            android:scaleType="center"
            android:text="Feedback"
            android:textColor="#DE000000" />
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>
</ScrollView>